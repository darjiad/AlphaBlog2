<h1 class="text-center mt-4">Create new Category</h1>

<div class="container">
<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors' ,obj:@category%>
  <%= form_with(model: @category,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
    <div class="form-group row">
  
  <%= f.label :name,"Category Name", class:"col-2 col-form-label text-light fs-5" %><br/>

  <div class="col-10">
  <%= f.text_field :name ,class:"form-control shadow rounded" ,placeholder: "Enter the name"%>
    </div>
    </div>
   
  
  <div class="form-group row justify-content-center ">
  <div class='col-2 mt-3'>
  <%= f.submit  class:"btn btn-outline-light btn-lg" %>
  </div>
  </div>
  
  <% end %>
  </div>
  <div class=" row justify-content-center">
  <div class='col-4 position-relative position-md-absolute mt-2'  style="left:1%">
  <%= link_to '[ Resturns to Article listing ]' ,articles_path,class: "text-info fw-bold fs-3" %>
  </div>
  </div>
  </div>
</div>
