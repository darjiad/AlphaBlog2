<div class="container">
<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors',obj:@article %>
  <%= form_with(model: @article,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
    <div class="form-group row">
  
  <%= f.label :title, class:"col-2 col-form-label text-light fs-3" %><br/>

  <div class="col-10">
  <%= f.text_field :title ,class:"form-control shadow rounded" ,placeholder: "Title of Article"%>
    </div>
    </div>
    <div class="form-group row">
  <%= f.label :description,class:"col-2 col-from-label mt-3 text-light fs-3" %><br/>
  <div class="col-10">
  <%= f.text_area :description ,rows:10,class:"form-control mt-3 shadow rounded",placeholder: "Description of Article" %>
  </div>
  </div>
  <div class="form-group row justify-content-center ">
  <div class='col-2 mt-3'>
  <%= f.submit class:"btn btn-outline-light btn-lg" %>
  </div>
  </div>
  
  <% end %>
  </div>
  <div class=" row justify-content-center">
  <div class='col-4 position-relative position-md-absolute mt-2'  style="left:1%">
  <%= link_to '[ Resturns to Article listing ]' ,articles_path,class: "text-info fw-bold fs-3" %>
  </div>
  </div>
  </div>
</div>
